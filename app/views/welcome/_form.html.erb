<%= form_for :drawing, :url => { :controller => "drawings", :action => "create"}, :html => {:class => 'drawing-form'} do |f| %>
  <%= f.text_field :name, :placeholder => "drawing name", class: 'drawing-name' %></br>
  <%= f.text_field :user_name, :placeholder => "your name" %>
  <%= f.text_field :user_spouse, :placeholder => "your spouse" %>
<% end %>



